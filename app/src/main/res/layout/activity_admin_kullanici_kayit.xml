<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminKullaniciKayit"
    android:gravity="center"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="YETKİLİ KULLANICI KAYIT"
                android:textColor="#F60303"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/adminisim"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:hint="İsim"
                android:background="@drawable/rounded"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_baseline_edit_24"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/adminsoyisim"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Soyisim"
                android:background="@drawable/rounded"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_baseline_edit_24"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/admintcno"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="TC Kimlik No"
                android:background="@drawable/rounded"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_baseline_edit_24"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/adminemail"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="E-Mail"
                android:background="@drawable/rounded"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_baseline_email_24"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/adminsifre"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Şifre"
                android:inputType="textPassword"
                android:background="@drawable/rounded"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_baseline_password_24"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/roundedbutton"
                android:text="Kaydol"
                android:textColor="@color/white"
                android:onClick="sendData"
                android:textSize="18sp"
                android:layout_marginTop="30dp"/>



        </LinearLayout>




    </androidx.cardview.widget.CardView>



</LinearLayout>