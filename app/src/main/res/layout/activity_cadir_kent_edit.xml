<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".CadirKentEdit">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ÇADIR KENT VERİ DÜZENLE"
                android:textSize="36sp"
                android:textColor="#F60303"
                android:textAlignment="center"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/cadirilduzenle"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:hint="İl"
                android:background="@drawable/rounded"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_baseline_location_city_24"/>

            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/rounded"
                android:layout_height="40dp"
                android:id="@+id/cadirilceduzenle"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:hint="İlçe"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_baseline_location_city_24"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rounded"
                android:id="@+id/cadirmahalleduzenle"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:hint="Mahalle"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_baseline_location_city_24"/>
            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/rounded"
                android:layout_height="40dp"
                android:id="@+id/cadirsokakduzenle"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:hint="Sokak"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_baseline_location_city_24"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rounded"
                android:id="@+id/cadirbosyerduzenle"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:hint="Boş Yer"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/tent_3_svgrepo_com"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rounded"
                android:id="@+id/cadirenlemduzenle"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:hint="Enlem"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_baseline_edit_location_alt_24"/>
            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/rounded"
                android:layout_height="40dp"
                android:id="@+id/cadirboylamduzenle"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:hint="Boylam"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_baseline_edit_location_alt_24"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/roundedbutton"
                android:text="Kaydet"
                android:textColor="@color/white"
                android:id="@+id/cadirduzenlekaydet"
                android:textSize="18sp"
                android:layout_marginTop="30dp"/>





        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>